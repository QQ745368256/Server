<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <set>
<!--            @integer/mtrl_btn_anim_duration_ms改为0，@dimen/mtrl_btn_pressed_z改为0-->
            <objectAnimator android:duration="0" android:valueTo="0" android:valueType="floatType" android:propertyName="translationZ" />
<!--            @dimen/mtrl_btn_elevation改为0-->
            <objectAnimator android:duration="0" android:valueTo="0" android:valueType="floatType" android:propertyName="elevation" />
        </set>
    </item>
    <item android:state_enabled="true" android:state_hovered="true">
        <set>
<!--            @integer/mtrl_btn_anim_duration_ms改为0,@dimen/mtrl_btn_hovered_z改为0-->
            <objectAnimator android:duration="0" android:valueTo="0" android:valueType="floatType" android:propertyName="translationZ" />
            @dimen/mtrl_btn_elevation改为0
            <objectAnimator android:duration="0" android:valueTo="0" android:valueType="floatType" android:propertyName="elevation" />
        </set>
    </item>
    <item android:state_focused="true" android:state_enabled="true">
        <set>
<!--            @integer/mtrl_btn_anim_duration_ms改为0，@dimen/mtrl_btn_focused_z改为0-->
            <objectAnimator android:duration="0" android:valueTo="0" android:valueType="floatType" android:propertyName="translationZ" />
<!--            @dimen/mtrl_btn_elevation改为0-->
            <objectAnimator android:duration="0" android:valueTo="0" android:valueType="floatType" android:propertyName="elevation" />
        </set>
    </item>
    <item android:state_enabled="true">
        <set>
<!--            @integer/mtrl_btn_anim_duration_ms改为0，@dimen/mtrl_btn_z改为0-->
            <objectAnimator android:duration="0" android:valueTo="0" android:valueType="floatType" android:propertyName="translationZ" />
<!--            @dimen/mtrl_btn_elevation改为0-->
            <objectAnimator android:duration="0" android:valueTo="0" android:valueType="floatType" android:propertyName="elevation" />
        </set>
    </item>
    <item>
        <set>
<!--            @dimen/mtrl_btn_disabled_z改为0-->
            <objectAnimator android:duration="0" android:valueTo="0" android:valueType="floatType" android:propertyName="translationZ" />
<!--            @dimen/mtrl_btn_disabled_elevation改为0-->
            <objectAnimator android:duration="0" android:valueTo="0" android:valueType="floatType" android:propertyName="elevation" />
        </set>
    </item>
</selector>