<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/free_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="57.0dip">

        <FrameLayout
            android:id="@id/fl_back"
            android:layout_width="57.0dip"
            android:layout_height="57.0dip"
            android:paddingLeft="20.0dip">

            <ImageView
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back_normal" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25.0dip"
            android:layout_centerInParent="true"
            android:text="@string/timing"
            android:textColor="@color/black"
            android:textSize="18.0sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@id/fl_save"
            android:layout_width="57.0dip"
            android:layout_height="57.0dip"
            android:layout_alignParentRight="true"
            android:paddingRight="20.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:text="@string/save"
                android:textColor="@color/text_yellow_56"
                android:textSize="16.0sp" />
        </FrameLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@id/bind_tips_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="10.0dip"
        android:paddingBottom="18.0dip"
        android:visibility="gone">

        <TextView
            android:id="@id/bind_host_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timing_bind_host_tips"
            android:textColor="#ffff8a56"
            android:textSize="14.0sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timing_bind_host_tips2"
            android:textColor="#ffff8a56"
            android:textSize="13.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_pickerview"
        android:layout_width="200.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="33.0dip"
        android:layout_marginBottom="49.0dip"
        android:orientation="horizontal">

        <com.contrarywind.view.WheelView
            android:id="@id/wv_left"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />

        <com.contrarywind.view.WheelView
            android:id="@id/wv_hour"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />

        <com.contrarywind.view.WheelView
            android:id="@id/wv_point"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <com.contrarywind.view.WheelView
            android:id="@id/wv_minute"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@color/white"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/repetition"
            android:textColor="@color/text_gray_9B"
            android:textSize="14.0sp" />

        <LinearLayout
            android:id="@id/ll_repeat"
            android:layout_width="wrap_content"
            android:layout_height="50.0dip"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@id/tv_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10.0dip"
                android:text="@string/only_one_time"
                android:textColor="@color/text_black4A"
                android:textSize="14.0sp" />

            <ImageView
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_gravity="center_vertical"
                android:src="@drawable/go_yellow" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/switch_view"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@color/white"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/timing_switch"
            android:textColor="@color/text_gray_9B"
            android:textSize="14.0sp" />

        <LinearLayout
            android:id="@id/ll_timing_switch"
            android:layout_width="wrap_content"
            android:layout_height="50.0dip"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@id/tv_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10.0dip"
                android:text="@string/timing_open"
                android:textColor="@color/text_black4A"
                android:textSize="14.0sp" />

            <ImageView
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_gravity="center_vertical"
                android:src="@drawable/go_yellow" />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@id/deleteTiming"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/g_button_height"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="10.0dip"
        android:layout_marginBottom="30.0dip"
        android:background="@drawable/smart_socket_item_selector"
        android:gravity="center"
        android:text="@string/delete_timing"
        android:textColor="#ffff0042"
        android:textSize="@dimen/button_text_size"
        android:visibility="gone" />
</LinearLayout>